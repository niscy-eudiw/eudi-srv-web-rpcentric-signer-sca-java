<configuration>
    <property name="LOGS" value="./logs" />

    <!-- Set the appender for the console-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p %C{1}.%method:%line %logger{36}: - %msg%n%throwable</pattern>
        </encoder>
    </appender>

    <!-- Set the appender for the log file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/sca_logger.log</file> <!-- Location and name of log file -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %p %C{1}.%method:%line %logger{36}: - %msg%n%throwable</pattern> <!-- Log Format-->
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGS}/archived/sca_logger-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <root level="info"> <!-- Log Level -->
        <appender-ref ref="CONSOLE" /> <!-- Logs for the console -->
        <appender-ref ref="FILE" /> <!-- Logs for the file -->
    </root>

</configuration>